.coupon {
  height: 100%;
}
.coupon .swiper-tab {
    position: relative;
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
    border-bottom: 1px solid #ccc;
    background: #F5F5F5;
}
.coupon .swiper-tab .table-item {
      width: 33.33%;
      text-align: center;
      display: inline-block;
}
.coupon .swiper-tab .table-item.active {
        color: red;
}
.coupon .swiper-box {
    height: 0;
}
.coupon .swiper-box .item-scroll {
      height: 100%;
}
.coupon .swiper-box .item-scroll .no-coupon {
        height: 500rpx;
        color: #ccc;
}
.coupon .swiper-box .item-scroll .swiper-item {
        height: 224rpx;
        -webkit-box-shadow: 0px 0px 20rpx 0px rgba(0, 0, 0, 0.1);
                box-shadow: 0px 0px 20rpx 0px rgba(0, 0, 0, 0.1);
        position: relative;
        margin: 30rpx 34rpx;
}
.coupon .swiper-box .item-scroll .swiper-item .lf {
          width: 138rpx;
          height: 128rpx;
          border: 1px dashed #FF0000;
          border-radius: 7px;
          margin: 0 14rpx;
          color: #FF0000;
}
.coupon .swiper-box .item-scroll .swiper-item .lf.blue {
            background: #F1F1F1;
            border-color: #A9A9A9;
            color: #A9A9A9;
}
.coupon .swiper-box .item-scroll .swiper-item .ct .top, .coupon .swiper-box .item-scroll .swiper-item .ct .bottom {
          font-size: 24rpx;
          text-align: center;
}
.coupon .swiper-box .item-scroll .swiper-item .ct .center {
          width: 100%;
          height: 1px;
          background: #000;
          margin: 10rpx 0;
}
.coupon .swiper-box .item-scroll .swiper-item .rf {
          margin: 0 14rpx;
          text-align: center;
}
.coupon .swiper-box .item-scroll .swiper-item .rf .top {
            padding: 6rpx 20rpx;
            background: #FF0006;
            margin-bottom: 14rpx;
            color: #FFFFFF;
}
.coupon .swiper-box .item-scroll .swiper-item .rf .bottom {
            color: #ccc;
}
.coupon .swiper-box .item-scroll .swiper-item .rf .circle {
            height: 104rpx;
            width: 104rpx;
            line-height: 104rpx;
            border: 1px solid #FF0000;
            color: #FF0000;
            border-radius: 100%;
}
.coupon .swiper-box .item-scroll .swiper-item .rf .circle.blue {
              background: #F1F1F1;
              border-color: #A9A9A9;
              color: #A9A9A9;
}

