.container {
  height: 100%;
}
.container .search-wrapper {
    height: 140rpx;
}
.container .search-wrapper .search-content {
      width: 640rpx;
      height: 60rpx;
      border: 1px solid #BDBDBD;
      border-radius: 30rpx;
      padding-left: 20rpx;
      color: #BDBDBD;
}
.container .page-body {
    height: 0;
}
.container .page-body .nav-left {
      height: 100%;
      width: 180rpx;
      background: #F4F4F4;
}
.container .page-body .nav-left .nav-left-item {
        height: 80rpx;
        line-height: 80rpx;
        text-align: center;
}
.container .page-body .nav-left .nav-left-item.active {
          background: #fff;
          border-left: 8rpx solid rosybrown;
          color: #2574EB;
}
.container .page-body .nav-right {
      width: 0;
}
.container .page-body .nav-right .nav-rt-item {
        width: 50%;
        float: left;
}
.container .page-body .nav-right .nav-rt-item .img {
          width: 250rpx;
          height: 235rpx;
          background: #fff;
}
.container .page-body .nav-right .nav-rt-item .des {
          height: 80rpx;
          line-height: 80rpx;
          text-align: center;
}

