page,
.container {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}
.address {
  padding: 30rpx;
}
.address .lf {
    width: 70rpx;
    color: #ccc;
}
.address .lf .icon {
      font-size: 48rpx;
      color: #2574EB;
}
.address .ad-info .ad-item {
    width: 100%;
}
.address .ad-info .ad-item .name {
      margin-right: 20rpx;
      font-weight: 600;
}
.address .ad-info .ad-item.ad {
      margin: 14rpx 0;
      color: red;
}
.address .ad-info .ad-item .icon {
      font-size: 56rpx;
      margin-left: 20rpx;
      line-height: 32rpx;
      color: #ccc;
}
.no-adress {
  height: 80rpx;
  padding: 0 30rpx;
}
.no-adress .icon {
    font-size: 56rpx;
    color: #ccc;
}
.scroll-ct {
  height: 0;
}
.scroll-ct .list {
    padding: 30rpx;
}
.scroll-ct .list .list-item {
      margin-bottom: 20rpx;
}
.scroll-ct .list .list-item .pic {
        margin-right: 20rpx;
}
.scroll-ct .list .list-item .pic image {
          height: 190rpx;
          width: 190rpx;
}
.scroll-ct .list .list-item .i-info {
        width: 0;
}
.scroll-ct .list .list-item .i-info .tt {
          font-size: 30rpx;
          font-weight: 600;
}
.scroll-ct .list .list-item .i-info .spec {
          margin: 18rpx 0;
}
.scroll-ct .list .list-item .i-info .price {
          color: red;
          font-weight: 600;
}
.buy-btn {
  height: 160rpx;
  padding: 0 50rpx;
}
.buy-btn .coustom {
    width: 100%;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    color: #fff;
    background: #2574EB;
}
.buy-btn .coustom.opt {
      opacity: .8;
}

