page,
.cart-content {
  height: 100%;
  width: 100%;
  font-size: 28rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.cart {
  height: 100%;
  width: 100%;
}
.cart .t-hd {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    color: #FE0000;
}
.cart .cart-s {
    height: 0;
}
.cart .cart-s .cart-list {
      padding-top: 10rpx;
}
.cart .cart-s .cart-list .cart-item {
        height: 336rpx;
        -webkit-box-shadow: 0px 0px 4rpx 0px rgba(0, 0, 0, 0.18);
                box-shadow: 0px 0px 4rpx 0px rgba(0, 0, 0, 0.18);
        margin-bottom: 28rpx;
        padding: 30rpx;
}
.cart .cart-s .cart-list .cart-item .checked {
          width: 40rpx;
}
.cart .cart-s .cart-list .cart-item .checked .circle {
            width: 30rpx;
            height: 30rpx;
            border: 1px solid #ccc;
            border-radius: 100%;
}
.cart .cart-s .cart-list .cart-item .checked .icon {
            font-size: 40rpx;
            position: relative;
            left: -2rpx;
            top: -4rpx;
            color: #FF0000;
}
.cart .cart-s .cart-list .cart-item .i-c {
          width: 0;
}
.cart .cart-s .cart-list .cart-item .i-c .tit .tt {
            width: 0;
            overflow: hidden;
            -o-text-overflow: ellipsis;
               text-overflow: ellipsis;
            white-space: nowrap;
            font-size: 30rpx;
            font-weight: 600;
}
.cart .cart-s .cart-list .cart-item .i-c .tit .del-btn {
            margin-left: 10rpx;
            width: 104rpx;
            height: 48rpx;
            background: #FF0000;
            border-radius: 6rpx;
            line-height: 48rpx;
            text-align: center;
            color: #fff;
}
.cart .cart-s .cart-list .cart-item .i-c .tit .del-btn.opt {
              opacity: .7;
}
.cart .cart-s .cart-list .cart-item .i-c .tc {
            margin-top: 12rpx;
}
.cart .cart-s .cart-list .cart-item .i-c .tc .img {
              margin-right: 14rpx;
}
.cart .cart-s .cart-list .cart-item .i-c .tc .img image {
                height: 190rpx;
                width: 190rpx;
}
.cart .cart-s .cart-list .cart-item .i-c .tc .des {
              height: 190rpx;
}
.cart .bottom {
    height: 130rpx;
    padding: 0 30rpx;
    background: #F8F5F5;
    border-radius: 6rpx;
}
.cart .bottom .ck .radio {
      width: 50rpx;
}
.cart .bottom .ck .radio .circle {
        width: 30rpx;
        height: 30rpx;
        border-radius: 100%;
        border: 1px solid #000;
}
.cart .bottom .ck .radio .icon {
        font-size: 40rpx;
        color: #FE0000;
        position: relative;
        left: -4rpx;
}
.cart .bottom .btn {
      width: 168rpx;
      height: 56rpx;
      color: #fff;
      background: #FF0000;
      line-height: 56rpx;
      text-align: center;
}
.cart .bottom .btn.opt {
        opacity: .8;
}
.empt-cart {
  height: 500rpx;
